<p id="notice"><%= notice %></p>

<h1>Writings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Headline</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writings.each do |writing| %>
      <tr>
        <td><%= writing.user_id %></td>
        <td><%= writing.headline %></td>
        <td><%= writing.body.html_safe %></td>
        <td><%= link_to 'Show', writing %></td>
        <td><%= link_to 'Edit', edit_writing_path(writing) %></td>
        <td><%= link_to 'Destroy', writing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

